# a minimal regime to test the model without a controller

- Name: test_model
  clear previous: !!python/bool True

  Model:
   type: RodPendulumModel
   initial state: [0, 100, 0, 0]

  Solver:
   type: ODEInt
   end time: 20

  ModelMixer:
   type: AdditiveMixer

- Name: test_controller
  clear previous: !!python/bool True

  Model:
   type: RodPendulumModel
   initial state: [0, 180, 0, 0]

  Solver:
   type: ODEInt
   end time: 20

  ModelMixer:
   type: AdditiveMixer
   Input A: Controller
   
  Controller:
   type: BasicController
   
  Trajectory:
   type: SmoothTransition
   delta t: 10
